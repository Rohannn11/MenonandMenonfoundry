{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Streamlit App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/dashboard.py"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Test System",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_system.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Ingest Knowledge",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/ingest_knowledge.py",
            "console": "integratedTerminal"
        }
    ]
}